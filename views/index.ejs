<html>
    <head>
        <title>Message Board</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>

        <h1>MINI MESSAGE BOARD</h1>
        <table width="800">
            <thead class="header">
                <tr>
                    <th class="user" width="25%">Users</th>
                    <th class="message" width="50%">Messages</th>
                    <th class="added" width="25%">Added</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < messages.length; i++) { %>
                    <tr>
                        <td> <%= messages[i].username %> </td>
                        <td> <%= messages[i].messages %> </td>
                        <td> <%= messages[i].added.toLocaleString('fr-FR', {
                            day: '2-digit',
                            month: '2-digit',
                            year: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit'
                          }) %> </td>
                    </tr>
                  <% } %>
            </tbody>
        </table>

        <div class="container-btn">
            <button onclick="location.href='/new'">New Message</button>
            <a href="/delete">Delete all messages</a>
        </div>


    </body>

</html>